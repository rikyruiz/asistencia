RewriteEngine On
RewriteBase /

# Redirigir a HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]

# Reescrituras para OAuth
RewriteRule ^auth/google/?$ auth/google/index.php [L]
RewriteRule ^auth/google/callback/?$ auth/google/callback.php [L]
RewriteRule ^auth/microsoft/?$ auth/microsoft/index.php [L]
RewriteRule ^auth/microsoft/callback/?$ auth/microsoft/callback.php [L]

# Prevenir acceso directo a archivos de configuración (pero permitir manifest.json)
<FilesMatch "\.(env|lock)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Bloquear archivos JSON excepto manifest.json
<FilesMatch "\.json$">
    Order Deny,Allow
    Deny from all
</FilesMatch>
<FilesMatch "^manifest\.json$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Configuración de PHP
php_flag display_errors off
php_value upload_max_filesize 10M
php_value post_max_size 10M
php_value max_execution_time 30
php_value session.cookie_httponly 1
php_value session.use_only_cookies 1

# Comprimir archivos
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript
</IfModule>

# NO cache para archivos PHP
<FilesMatch "\.(php)$">
    <IfModule mod_headers.c>
        Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0"
        Header set Pragma "no-cache"
        Header set Expires "Sat, 01 Jan 2000 00:00:00 GMT"
    </IfModule>
</FilesMatch>

# Cache de archivos estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
</IfModule>